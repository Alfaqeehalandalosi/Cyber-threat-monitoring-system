# =============================================================================
# CYBER THREAT MONITORING SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=Cyber Threat Monitoring System
APP_VERSION=1.0.0
DEBUG=False
DEMO_MODE=True
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Settings
MONGODB_URL=mongodb://admin:secure_mongo_password@localhost:27017/threat_monitoring?authSource=admin
MONGODB_DATABASE=threat_monitoring

# Elasticsearch Settings
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=ctms

# Redis Settings
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# TOR PROXY CONFIGURATION
# =============================================================================
TOR_PROXY_HOST=localhost
TOR_PROXY_PORT=9050
TOR_HTTP_PROXY_PORT=8118
USE_TOR_PROXY=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Token Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
# User agent for web scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_DELAY=2
SCRAPING_RANDOMIZE_DELAY=0.5
CONCURRENT_REQUESTS=8

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/ctms.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# =============================================================================
# ALERT CONFIGURATION
# =============================================================================
# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_FROM_EMAIL=alerts@yourdomain.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# EXTERNAL APIS (Optional)
# =============================================================================
# VirusTotal API
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# Shodan API
SHODAN_API_KEY=your-shodan-api-key

# ThreatCrowd API (usually free, no key needed)
THREATCROWD_ENABLED=true